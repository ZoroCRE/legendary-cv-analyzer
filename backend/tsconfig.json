{
    "compilerOptions": {
      "target": "es2016",
      "module": "node16",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node16"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
